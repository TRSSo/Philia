{
  "name": "philia",
  "version": "0.0.1",
  "description": "菲莉娅通用聊天应用接口标准及 TypeScript 实现",
  "license": "LGPL-3.0",
  "author": "TimeRainStarSky",
  "type": "module",
  "main": "lib/main.js",
  "scripts": {
    "lint": "prettier --write --list-different src && oxlint --fix src",
    "compile": "rm -rf lib/* && tsc",
    "minify": "node mod/oxc-minify lib",
    "build": "pnpm lint && pnpm compile && pnpm minify",
    "main": "node lib/main"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/ws": "^8.18.1",
    "oxc-minify": "^0.72.3",
    "oxlint": "^1.1.0",
    "prettier": "3.5.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "cbor-x": "^1.6.0",
    "chalk": "^5.4.1",
    "log4js": "^6.9.1",
    "msgpackr": "^1.11.4",
    "ulid": "^3.0.1",
    "ws": "^8.18.2",
    "yaml": "^2.8.0"
  },
  "imports": {
    "#*": "./lib/*/index.js",
    "#*.js": "./lib/*.js"
  },
  "exports": {
    ".": "./lib/index.js",
    "./*": "./lib/*/index.js",
    "./*.js": "./lib/*.js",
    "./package.json": "./package.json"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "cbor-extract",
      "msgpackr-extract"
    ],
    "patchedDependencies": {
      "log4js@6.9.1": "mod/log4js.patch"
    }
  }
}
